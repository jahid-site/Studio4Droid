<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style 	name="AppTheme"	parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item 	name="android:colorPrimary">@color/colorPrimary</item>
        <item 	name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item 	name="android:colorAccent">@color/colorAccent</item>
        <item 	name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item 	name="android:colorControlNormal">@color/colorControlNormal</item>
        <item   name="android:navigationBarColor">@color/colorNavigationBar</item>
    </style>

    <style 	name="AppThemeDark"	parent="@android:style/Theme.Material.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item 	name="android:colorPrimary">@color/dark_colorPrimary</item>
        <item 	name="android:colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item 	name="android:colorAccent">@color/dark_colorAccent</item>
        <item 	name="android:colorControlHighlight">@color/dark_colorControlHighlight</item>
        <item 	name="android:colorControlNormal">@color/dark_colorControlNormal</item>
        <item   name="android:navigationBarColor">@color/dark_colorNavigationBar</item>
    </style>

    <style 	name="AppThemeDefault"	parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item 	name="android:colorPrimary">@color/default_colorPrimary</item>
        <item 	name="android:colorPrimaryDark">@color/default_colorPrimaryDark</item>
        <item 	name="android:colorAccent">@color/default_colorAccent</item>
        <item 	name="android:colorControlHighlight">@color/default_colorControlHighlight</item>
        <item 	name="android:colorControlNormal">@color/default_colorControlNormal</item>
        <item   name="android:navigationBarColor">@color/default_colorNavigationBar</item>
    </style>
</resources>